{
	"name": "Telescope",
	"version": "1.0.0",
	"description": "Quickly view Glassdoor information in LinkedIn",
	"homepage_url": "https://github.com/jaebradley/telescope-chrome-extension",
	"manifest_version": 2,
	"minimum_chrome_version": "58",
	"permissions": [
    "*://linkedin.com/*",
    "localhost:5000/*",
    "contextMenus",
		"tabs",
    "storage"
	],
	"optional_permissions": [
		"http://*/*",
		"https://*/*"
	],
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"run_at": "document_end",
			"matches": [
				"*://www.linkedin.com/*"
			],
			"js": [
        "content.js"
			]
		}
  ],
  "browser_action": {},
	"icons": {
		"16": "icons/16.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Alt+T"
			}
		}
	}
}
